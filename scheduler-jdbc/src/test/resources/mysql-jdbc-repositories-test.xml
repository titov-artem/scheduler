<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd">

    <bean id="activeRunsRepository"
          class="com.github.scheduler.repo.jdbc.mysql.MySqlJdbcActiveRunsRepository">
        <property name="jdbcOperations" ref="jdbcOperations"/>
    </bean>

    <bean id="historyRunsRepository"
          class="com.github.scheduler.repo.jdbc.mysql.MySqlJdbcHistoryRunsRepository">
        <property name="jdbcOperations" ref="jdbcOperations"/>
    </bean>

    <bean id="taskParamsRepository"
          class="com.github.scheduler.repo.jdbc.mysql.MySqlJdbcTaskParamsRepository">
        <property name="jdbcOperations" ref="jdbcOperations"/>
    </bean>

    <bean id="taskRepository"
          class="com.github.scheduler.repo.jdbc.mysql.MySqlJdbcTaskRepository">
        <property name="jdbcOperations" ref="jdbcOperations"/>
    </bean>

    <bean id="timetableRepository"
          class="com.github.scheduler.repo.jdbc.mysql.MySqlJdbcTimetableRepository">
        <property name="jdbcOperations" ref="jdbcOperations"/>
    </bean>

    <!-- jdbc internals -->

    <bean id="jdbcOperations" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="transactionOperations" class="org.springframework.transaction.support.TransactionTemplate">
        <constructor-arg ref="transactionManager"/>
    </bean>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url"
                  value="jdbc:mysql://localhost:3306/scheduler?user=root&amp;password=&amp;autoReconnect=true&amp;useUnicode=true"/>
    </bean>

    <bean class="com.github.scheduler.FlywayInit">
        <property name="flyway">
            <bean class="org.flywaydb.core.Flyway">
                <property name="dataSource" ref="dataSource"/>
                <property name="locations" value="classpath:sql.mysql"/>
            </bean>
        </property>
    </bean>

</beans>