<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="runMaster" class="com.github.scheduler.RunMaster" init-method="start">
        <property name="timetableRepository" ref="timetableRepository"/>
        <property name="historyRunsRepository" ref="historyRunsRepository"/>
        <property name="activeRunsRepository" ref="activeRunsRepository"/>
        <property name="host" value="${scheduler.host}"/>
        <property name="taskRepository" ref="taskRepository"/>
        <property name="engines">
            <list>
                <ref bean="engine"/>
            </list>
        </property>
        <property name="periodSeconds" value="${scheduler.master.periodSeconds}"/>
    </bean>

    <bean id="engine" class="com.github.scheduler.engine.Engine" init-method="start">
        <property name="executorLookupService">
            <bean class="com.github.scheduler.engine.executor.lookup.ByClassNameExecutorLookupService"/>
        </property>
        <property name="taskPicker">
            <bean class="com.github.scheduler.engine.SimpleInOrderTaskPicker"/>
        </property>
        <property name="taskArgsRepository" ref="taskParamsRepository"/>
        <property name="activeRunsRepository" ref="activeRunsRepository"/>
        <property name="hostProvider">
            <bean class="com.github.scheduler.utils.FromPropertySchedulerHostProvider">
                <property name="host" value="${scheduler.host}"/>
            </bean>
        </property>
        <property name="service" value="${scheduler.engine.service}"/>
        <property name="threadCount" value="${scheduler.engine.threads}"/>
        <property name="capacity" value="${scheduler.engine.capacity}"/>
        <property name="pickPeriod" value="${scheduler.engine.periodSeconds}"/>
    </bean>

</beans>