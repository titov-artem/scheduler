<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="runMaster" class="com.github.scheduler.RunMaster" init-method="start">
        <property name="timetableRepository" ref="timetableRepository"/>
        <property name="historyRunsRepository" ref="historyRunsRepository"/>
        <property name="activeRunsRepository" ref="activeRunsRepository"/>
        <property name="host" value="localhost"/>
        <property name="taskRepository" ref="taskRepository"/>
        <property name="engines">
            <list>
                <ref bean="engine"/>
            </list>
        </property>
        <property name="period" value="1"/>
    </bean>

    <bean id="engine" class="com.github.scheduler.engine.Engine" init-method="start">
        <property name="executorLookupService">
            <bean class="com.github.scheduler.engine.executor.lookup.ByClassNameExecutorLookupService"/>
        </property>
        <property name="taskPicker">
            <bean class="com.github.scheduler.engine.SimpleInOrderTaskPicker"/>
        </property>
        <property name="taskArgsRepository" ref="taskParamsRepository"/>
        <property name="service" value="main"/>
        <property name="activeRunsRepository" ref="activeRunsRepository"/>
        <property name="host" value="localhost"/>
        <property name="threadCount" value="1"/>
        <property name="capacity" value="100"/>
        <property name="pickPeriod" value="1"/>
    </bean>

</beans>